# SnapSite Configuration
# Copy this file to .env and fill in your values

# Core Configuration
SNAPSITE_API_KEY=your-api-key-here
SNAPSITE_ENVIRONMENT=development
NODE_ENV=development
PORT=5173

# AI Engine Configuration
AI_MODEL_VERSION=snapsite-v2.1
AI_GENERATION_TIMEOUT=30
AI_MAX_RETRIES=3
AI_RATE_LIMIT=100

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/snapsite
REDIS_URL=redis://localhost:6379
DB_POOL_MIN=2
DB_POOL_MAX=10

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key
JWT_EXPIRY=7d
API_KEY_PREFIX=ss_
SESSION_TIMEOUT=3600

# Storage & CDN
CDN_ENDPOINT=https://cdn.snap-site.dev
STORAGE_BUCKET=snapsite-assets
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@snap-site.dev
SMTP_PASS=your-email-password
FROM_EMAIL=SnapSite <noreply@snap-site.dev>

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Payment Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Third-party APIs
UNSPLASH_ACCESS_KEY=your-unsplash-key
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Security
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=12

# Development
DEV_MOCK_AI=false
DEV_SKIP_AUTH=false
DEV_ENABLE_DEBUG=true
VITE_DEV_TOOLS=true

# Production Optimization
ENABLE_COMPRESSION=true
ENABLE_CACHE=true
CACHE_TTL=3600
CDN_CACHE_TTL=86400

# Feature Flags
FEATURE_PREMIUM_GENERATION=true
FEATURE_CUSTOM_DOMAINS=true
FEATURE_ANALYTICS=true
FEATURE_WEBHOOKS=true
FEATURE_A_B_TESTING=false

# Monitoring & Health Checks
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
PROMETHEUS_PORT=9090